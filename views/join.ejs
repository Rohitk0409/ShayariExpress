<%- layout('/layouts/boiyelercode.ejs') %>
<styl>
  <style>
    body {
      background-color: rgb(226, 235, 243);
      height: 100%;
    }
    .logo1 {
      font-weight: bolder;
      color: rgb(229, 104, 59);
    }
    .logo2 {
      font-weight: bolder;
      color: black;
    }
    .fa-solid {
      color: rgb(229, 104, 59);
    }
    main {
      width: 100%;
      height: 100%;
    }

    .make {
      padding-top: 1rem;
    }
    .tag {
      letter-spacing: 0.4rem;
    }
    a {
      text-decoration: none !important;
    }
    .main {
      width: 85%;
      margin-top: 5rem !important;
      margin: auto;
      color: black;
      margin-bottom: 2rem;
    }
    h6 {
      color: rgb(229, 104, 59);
    }
    .box {
      width: 70%;
      margin: auto;
      background-color: white;
      margin-bottom: 1rem;
      border-radius: 10px;
      box-shadow: 0 0 7px black;
      padding: 1rem;
    }
    .option {
    }
    .icon2 {
      margin-right: 0.5rem;
    }
    .more {
      font-size: x-large !important;
      font-weight: bold;
    }
    .trending {
      font-size: xx-large;
      letter-spacing: 0.2px;
      font-size: 3rem;
    }
    .cots {
      width: 80%;
      margin: auto;
      margin-top: 4rem !important;
      margin-bottom: 2rem;
    }
    .choice {
      padding-top: 1rem;
    }
    .cotegary {
      width: 90%;
      margin: auto;
      display: flex;
      flex-wrap: wrap;
    }
    .cot {
      min-width: 4rem;
      text-align: center;
      background-color: rgb(239, 138, 102);
      letter-spacing: 0.4px;
      margin-right: 4px;
      padding: 0.4rem;
      padding-left: 5px;
      padding-right: 5px;
      border-radius: 3px;
      margin-bottom: 0.3rem;
    }
    .btn {
      background-color: rgb(223, 132, 75);
      color: black;
    }
    :hover.btn {
      background-color: black;
      color: white;
    }
    h3 {
      color: rgb(223, 132, 75);
    }
    form {
      margin-top: 4rem !important;
    }
    .guidlines {
      border: 2px solid rgb(233, 129, 25);
      padding: 1rem;
      border-radius: 6px;
      background-color: rgb(236, 224, 211);
    }
    .im {
      color: rgb(233, 129, 25);
    }
  </style>
  <main class="main">
    <form method="post" action="/join" class="mt-4">
      <h3 class="mb-3">Join Our Community</h3>
      <div>
        <div class="mb-3">
          <label for="name" class="form-label"><B>Full Name</B></label>
          <input
            type="text"
            class="form-control"
            id="name"
            name="name"
            placeholder="Enter Your Full Name"
            required
          />
        </div>
        <div class="mb-3">
          <label for="email" class="form-label"><B>Email-Id</B></label>
          <input
            type="email"
            class="form-control"
            id="email"
            placeholder="Enter your email"
            name="email"
            required
          />
        </div>
        <div class="mb-3">
          <label for="age" class="form-label"><B>Age</B></label>
          <input
            type="number"
            class="form-control"
            id="age"
            placeholder="Enter Your Age"
            required
            name="age"
          />
        </div>
        <div class="mb-3">
          <label for="city" class="form-label"><B>City</B></label>
          <input
            type="text"
            class="form-control"
            id="city"
            placeholder="Enter Your City"
            name="city"
            required
          />
        </div>
        <div class="mb-3">
          <button class="btn btn-su">Join</button>
        </div>
      </div>
    </form>
    <br />
  </main>
</styl>
